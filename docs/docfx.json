{
	"metadata": [
		{
			"src": [
				{
					"src": "../src/HotPreview",
					"files": [
						"**/*.csproj"
					]
				}
			],
			"dest": "api"
		}
	],
	"build": {
		"content": [
			{
				"files": [
					"**/*.{md,yml}"
				],
				"exclude": [
					"_site/**"
				]
			}
		],
		"resource": [
			{
				"files": [
					"images/**"
				]
			},
			{
				"src": "../",
				"files": [
					"images/**"
				]
			},
			{
				"files": [
					"**/cpp-protocol-schema.json"
				]
			}
		],
		"xref": [
			"https://learn.microsoft.com/en-us/dotnet/.xrefmap.json"
		],
		"output": "_site",
		"template": [
			"default",
			"modern"
		],
		"globalMetadata": {
			"_appName": "Hot Preview",
			"_appTitle": "Hot Preview Documentation",
			"_enableSearch": true,
			"pdf": false
		}
	}
}
